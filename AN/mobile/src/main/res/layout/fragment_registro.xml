            android:layout_gravity="center|center_vertical"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textColor="@color/RegistroCalendarioColorFuente"
            android:text="08/06"
            android:layout_gravity="center|center_vertical"/>

