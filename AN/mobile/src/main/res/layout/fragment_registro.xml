    <LinearLayout
        android:layout_width="@dimen/anchoListaRegistro"
        android:layout_height="@dimen/altoListaRegistro"
        android:orientation="vertical"
        android:gravity="center|center_vertical"
        android:background="@drawable/border"
        >
        <TextView
