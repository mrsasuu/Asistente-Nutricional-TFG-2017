<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_log_in"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background_login"
    tools:context="com.example.sasu.asistente_nutricional_tfg_2017.screens.LogIn">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="30dp"
        android:layout_gravity="center"
        android:src="@drawable/logoapple"/>


    <LinearLayout
        android:id="@+id/input_user_layout"
        android:layout_width="279dp"
        android:layout_height="64dp"
        android:background="@drawable/no_border"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:layout_marginBottom="30dp">
            <EditText
                android:id="@+id/input_user"
                android:focusable="true"
                android:layout_marginTop="2dp"
                android:layout_width="275dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:paddingLeft="20dp"
                android:background="@drawable/border_input"
                android:singleLine="true"
                android:inputType="textEmailAddress"
                android:hint="Nombre de usuario o e-mail" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/input_password_layout"
        android:layout_width="279dp"
        android:layout_height="64dp"
        android:background="@drawable/no_border"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:layout_marginBottom="30dp">
        <EditText
            android:id="@+id/input_password"
            android:focusable="true"
            android:inputType="textPassword"
            android:layout_marginTop="2dp"
            android:layout_width="275dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:paddingLeft="20dp"
            android:background="@drawable/border_input"
            android:singleLine="true"
            android:hint="ContraseÃ±a" />
    </LinearLayout>


</LinearLayout>
