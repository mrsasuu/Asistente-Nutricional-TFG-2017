<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/backgrounds"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.sasu.asistente_nutricional_tfg_2017.screens.AmountChoice">

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:layout_editor_absoluteY="5dp"
        tools:layout_editor_absoluteX="8dp"
        android:elevation="8dp"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:background="@color/backgroundTitle"

            android:elevation="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"

                android:text="Cantidades"
                android:textSize="30sp"
                android:padding="10sp"
                android:textColor="@color/white"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textSize="20sp"
                android:padding="20dp"
                android:text="Selecciona la fotografía con el tamaño más parecido al plato que ha comido o va a comer."/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:onClick="cantidadMinima"
                android:id="@+id/porcionMin"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:onClick="cantidadMedia"
                android:id="@+id/porcionMed"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:onClick="cantidadMaxima"
                android:id="@+id/porcionMax"/>





        </LinearLayout>



    </LinearLayout>
</android.support.constraint.ConstraintLayout>
