<div id="add_content_type" class="modal modal_material modal-fixed-footer">
	<div class="modal-header z-depth-1">
		<h4>Añadir un nuevo tipo de contenido</h4>
		<span><i class="modal_close modal-action modal-close material-icons right">close</i></span>
	</div>
	<form class="col s12 row" method="post" action="/backend/contentTypes/add/" enctype="multipart/form-data" autocomplete="off">
		<div class="modal-content">
			<!-- Name -->
			<div class="input-field col s12">
				<input id="add_name_content_type" name="add_name_content_type" type="text" class="validate" required>
				<label for="add_name_content_type">Nombre</label>
			</div>

			<!-- Description -->
			<div class="input-field col s12">
				<input id="add_description_content_type" name="add_description_content_type" type="text">
				<label for="add_description_content_type">Descripción</label>
			</div>

			<!-- Icon -->
			<div class="file-field input-field col s12 m6">
				<div class="btn">
					<span>Icono</span>
					<input id="add_icon_content_type" name="add_icon_content_type" type="file" required>
				</div>
					<div class="file-path-wrapper">
					<input class="file-path validate" type="text">
				</div>
			</div>

			<!-- Icon Preview -->
			<div class="col s12 m6 center-align">
				<img id="addIconImgViewer" class="imagePreview responsive-img" src="/static/img/img_not_available.png" alt=""/>
			</div>
		</div>
		<div class="modal-footer">
			<!-- Submit -->
			<div class="input field col s12 center-align submit_modal">
				<button class="btn waves-effect waves-light" type="submit" name="add_submit_content_type">
					<span>Enviar</span>
					<i class="material-icons right">send</i>
				</button>
			</div>
		</div>
	</form>
</div>
