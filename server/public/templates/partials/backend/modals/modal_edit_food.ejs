<div id="edit_food" class="modal modal_material modal-fixed-footer">
	<div id="food_loader" class="modal_loader preloader-wrapper big active">
		<div class="spinner-layer spinner-custom">
			<div class="circle-clipper left">
				<div class="circle"></div>
			</div>
			<div class="gap-patch">
				<div class="circle"></div>
			</div>
			<div class="circle-clipper right">
				<div class="circle"></div>
			</div>
		</div>
	</div>
	<div class="modal-header z-depth-1">
		<h4>Editar Alimento</h4>
		<span><i class="modal_close modal-action modal-close material-icons right">close</i></span>
	</div>
	<form class="col s12" method="post" action="/backend/foods/edit/" enctype="multipart/form-data">
		<div class="modal-content">
			<div class="row">
				<input id="edit_id_food" type="hidden" name="edit_id_food" />
				<!-- Previous Photo -->
				<input id="edit_previous_photo_food" type="hidden" name="edit_photo_anterior_food" />

				<!-- Nombre -->
				<div class="input-field col s12">
					<input id="edit_name_food" name="edit_name_food" type="text" class="validate" placeholder="">
					<label for="edit_name_food">Nombre</label>
				</div>

				<!-- Proteinas -->
				<div class="input-field col s12">
					<input id="edit_proteins_food" name="edit_proteins_food" type="number" class="validate" placeholder="">
					<label for="edit_proteins_food">Proteinas</label>
				</div>

				<!-- Hidratos de carbono -->
				<div class="input-field col s12 m6">
					<input id="edit_carbon_hydrates_food" name="edit_carbon_hydrates_food" type="number" class="validate" placeholder="">
					<label for="edit_carbon_hydrates_food">H. carbono</label>
				</div>

				<!-- Lipidos -->
				<div class="input-field col s12 m6">
					<input id="edit_lipids_food" name="edit_lipids_food" type="number" class="validate" placeholder="">
					<label for="edit_lipids_food">LÃ­pidos</label>
				</div>

				<!-- Foto Portada -->
				<div class="file-field input-field col s12 m6">
					<div class="btn">
						<span>Foto</span>
						<input id="edit_photo_food" name="edit_photo_food" type="file">
					</div>
						<div class="file-path-wrapper">
						<input class="file-path validate" type="text">
					</div>
				</div>

				<div class="col s12 m6 center-align">
					<img id="editFoodImgViewer" class="imagePreview responsive-img" src="/static/img/img_not_available.png" alt=""/>
				</div>
			</div>
		</div>
		<div class="modal-footer">
			<!-- Submit -->
			<div class="input field col s12 center-align submit_modal">
				<button class="btn waves-effect waves-light" type="submit" name="edit_submit_food">
					<span>Editar</span>
					<i class="material-icons right">send</i>
				</button>
			</div>
		</div>
	</form>
</div>